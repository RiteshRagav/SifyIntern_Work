# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://infinitai.sifymdp.digital/maas/v1
OPENAI_MODEL=meta/llama-3.3-70b-instruct
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4096
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=storyboard_db

# ChromaDB Configuration
CHROMADB_PERSIST_DIR=./chroma_data
CHROMADB_RAG_COLLECTION=rag_documents
CHROMADB_TME_COLLECTION=tme_memories

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Application Configuration
APP_NAME=Multi-Agent Storyboard System
APP_VERSION=1.0.0
DEBUG=false

# Agent Configuration
PREACT_MAX_SCENES=6
REACT_MAX_ITERATIONS=5
REFLECT_REVISION_ROUNDS=2

# Rename this file to .env and fill in your values

